<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:id="@+id/llv">
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View and edit profile"
                android:id="@+id/edit"
                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                android:textColor="@color/heading"
                android:textSize="22dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/editimg"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/edit" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
            android:id="@+id/lls"
        android:padding="10dp"
            android:layout_weight="1">
        <views.textview.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:id="@+id/subtitle"
            geekui:customTypeface="fonts/Ubuntu-L.ttf"
            android:textColor="@color/heading"
            android:textSize="22dp"
            android:layout_weight="1"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:id="@+id/imageView3"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/about" />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/llforhelp"
            android:layout_weight="1">
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Help &amp; Support"
                android:id="@+id/help"
                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                android:textColor="@color/heading"
                android:textSize="22dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/helpimg"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/help" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/llforwhyhost"
            android:layout_weight="1">
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why Host"
                android:id="@+id/yhost"
                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                android:textColor="@color/heading"
                android:textSize="22dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/hostimg"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/whyhost" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/llforbecomehost"
            android:layout_weight="1">
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Become a Host"
                android:id="@+id/bcmhst"
                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                android:textColor="@color/heading"
                android:textSize="22dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/bhostimg"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/host" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/llforfeedback"
            android:layout_weight="1">
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Give us feedback"
                android:id="@+id/fdbck"
                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                android:textColor="@color/heading"
                android:textSize="22dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/feedimg"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/feedbck" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/llforinvite"
            android:layout_weight="1">
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share With Pals"
                android:id="@+id/invite"
                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                android:textColor="@color/heading"
                android:textSize="22dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/inviteimg"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/invite" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbbbbb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/llforlogout"
            android:layout_weight="1">
            <views.textview.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:id="@+id/Logout"
                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                android:textColor="@color/heading"
                android:textSize="22dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/dsd"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/logout" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>