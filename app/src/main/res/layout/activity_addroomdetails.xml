<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="5dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/back"
            android:src="@drawable/leftarrow"
            android:layout_marginRight="10dp" />

        <views.textview.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Your Space"
            android:id="@+id/lys"
            geekui:customTypeface="fonts/Ubuntu-R.ttf"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />
        <views.textview.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview"
            android:id="@+id/prew"
            geekui:customTypeface="fonts/Ubuntu-R.ttf"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginLeft="10dp" />
    </LinearLayout><![CDATA[

    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:layout_marginTop="15dp"

        android:textColor="#000000"
        android:textSize="20dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_marginBottom="5dp"
        android:gravity="center" />
    ]]>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:background="#56bbbbbb"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top|center">
                <FrameLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="160dp">


                    <view
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        class="android.support.v4.view.ViewPager"
                        android:id="@+id/pager"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/homes" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#000000"
                            android:alpha="0.4"></LinearLayout>

                        <views.textview.TypefaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/addphotos"
                            android:layout_gravity="bottom|center_horizontal|right"

                            android:gravity="bottom|right"
                            android:textSize="22dp"
                            geekui:customTypeface="fonts/Ubuntu-R.ttf"
                            android:src="@drawable/sg"
                            android:text="Add Photos"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp" />
                    </FrameLayout><![CDATA[

                    LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:alpha="0.2"/>


                ]]>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/frmlay"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left|center"
                        android:id="@+id/llfortitle"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                            <views.textview.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Write Title"
                                android:id="@+id/edit"
                                geekui:customTypeface="fonts/Ubuntu-R.ttf"
                                android:textColor="@color/pink"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                />
                            <views.textview.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Give your listing a descriptive headline"
                                android:id="@+id/desc"
                                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                                android:textColor="@color/heading"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#bbbbbb"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left|center"
                        android:id="@+id/llforsummary"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                            <views.textview.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Write Summary"
                                android:id="@+id/ws"
                                geekui:customTypeface="fonts/Ubuntu-R.ttf"
                                android:textColor="@color/pink"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                />
                            <views.textview.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Summarize the highlight of your listing"
                                android:id="@+id/descs"
                                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                                android:textColor="@color/heading"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#bbbbbb"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left|center"
                        android:id="@+id/llforaddress"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                            <views.textview.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Set Address"
                                android:id="@+id/sa"
                                geekui:customTypeface="fonts/Ubuntu-R.ttf"
                                android:textColor="@color/pink"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                />
                            <views.textview.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Only confirmed guests see your address"
                                android:id="@+id/sadesc"
                                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                                android:textColor="@color/heading"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#bbbbbb"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left|center"
                        android:id="@+id/llforsetprice"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                            <views.textview.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Set Price"
                                android:id="@+id/sp"
                                geekui:customTypeface="fonts/Ubuntu-R.ttf"
                                android:textColor="@color/pink"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                />
                            <views.textview.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Try our sugested price to start"
                                android:id="@+id/pdescp"
                                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                                android:textColor="@color/heading"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#bbbbbb"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="left|center"
                        android:id="@+id/llforbookingdetails"
                        android:layout_weight="1"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:background="#ffffff"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="10dp">
                            <views.textview.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Set Booking Settings"
                                android:id="@+id/sbs"
                                geekui:customTypeface="fonts/Ubuntu-R.ttf"
                                android:textColor="@color/pink"
                                android:textSize="20dp"
                                android:layout_weight="1"
                                />
                            <views.textview.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Choose who can book instantly"
                                android:id="@+id/descl"
                                geekui:customTypeface="fonts/Ubuntu-L.ttf"
                                android:textColor="@color/heading"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:gravity="center|top"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/llforoptional">
                        <views.textview.TypefaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Optional Details"
                            android:id="@+id/beds"
                            android:gravity="center"
                            geekui:customTypeface="fonts/Ubuntu-R.ttf"
                            android:textColor="@color/heading"
                            android:textSize="18dp"
                            android:layout_margin="5dp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#bbbbbb"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <views.textview.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/Next"
            android:gravity="center"
            geekui:customTypeface="fonts/AllerDisplay.ttf"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:background="@color/pink"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="bottom|center"
            android:fillViewport="false" />
    </FrameLayout>

</LinearLayout>