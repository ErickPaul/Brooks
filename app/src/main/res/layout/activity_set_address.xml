<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    tools:context=".SetAddressActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:alpha="0.95"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="top|center"
            android:background="#ffffff">

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:elevation="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/closed"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/close"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bbbbbb"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"><![CDATA[

                    views.textview.TypefaceTextView
                    geekui:customTypeface="fonts/Ubuntu-L.ttf"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your phone number is secure with us. We wont share your details with anyone."
                    android:id="@+id/textView8"
                    android:gravity="left|center"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />



                    ]]>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">


                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_layoutas33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/GreenTextInputLayout"
                            android:layout_marginTop="20dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/address1"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"
                                android:singleLine="true"
                                android:background="@null"
                                android:textColorHint="#7a7979"
                                android:textSize="20dp"
                                android:padding="5dp"
                                android:layout_weight="1"
                                android:hint="Address*" />
                        </android.support.design.widget.TextInputLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp" />
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_input_lagthyoutagfgs33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/GreenTextInputLayout"
                            android:layout_marginTop="2dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/pincode"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"
                                android:singleLine="true"
                                android:background="@null"
                                android:textColorHint="#7a7979"
                                android:textSize="20dp"
                                android:padding="5dp"
                                android:layout_weight="1"
                                android:hint="Zip Code*"
                                android:inputType="number" />
                        </android.support.design.widget.TextInputLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp" />
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/text_inputthyoutagfgs33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/GreenTextInputLayout"
                            android:layout_marginTop="2dp">
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/city"
                                android:layout_gravity="center_horizontal"
                                android:textColor="#000"
                                android:singleLine="true"
                                android:background="@null"
                                android:textColorHint="#7a7979"
                                android:textSize="20dp"
                                android:padding="5dp"
                                android:layout_weight="1"
                                android:hint="City / Town*"
                                android:inputType="textCapSentences" />
                        </android.support.design.widget.TextInputLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp" />
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/country11"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000"
                            android:singleLine="true"
                            android:background="@null"
                            android:textColorHint="#7a7979"
                            android:textSize="20dp"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:hint="Country*"
                            android:inputType="textCapSentences" />


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/State"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000"
                            android:singleLine="true"
                            android:background="@null"
                            android:textColorHint="#7a7979"
                            android:textSize="20dp"
                            android:padding="5dp"
                            android:layout_weight="1"
                            android:hint="State*"
                            android:inputType="textCapSentences" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp" />

                        <views.textview.TypefaceTextView
                            geekui:customTypeface="fonts/Ubuntu-R.ttf"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save Address"
                            android:id="@+id/savedd"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:textColor="#ffffff"
                            android:textSize="18dp"
                            android:background="#FF5959" />

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>


        </LinearLayout>
        <views.ProgressWheel
            android:id="@+id/pbd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            wheel:matProg_barColor="@color/red_btn_bg_color"
            wheel:matProg_progressIndeterminate="true"
            android:layout_gravity="center"/>
    </FrameLayout>
</LinearLayout>